@page
@model DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Publisher</h4>
    <hr />
    @if (!String.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @Model.ErrorMessage
            </div>
        }
    else
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Publisher.PublisherName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Publisher.PublisherName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Publisher.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Publisher.Description)
            </dd>
        </dl>
    }
</div>
<div>
     @if (String.IsNullOrEmpty(Model.ErrorMessage) && Model.Publisher != null)
        {
            <a asp-page="./Edit" asp-route-id="@Model.Publisher.PublisherId">Edit</a>
            <span>|</span>
        }
    <a asp-page="./Index">Back to List</a>
</div>
