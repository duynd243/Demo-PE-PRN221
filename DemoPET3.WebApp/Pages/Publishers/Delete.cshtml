@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Publisher</h4>
    <hr/>
    @if (!String.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Publisher.PublisherName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Publisher.PublisherName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Publisher.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Publisher.Description)
            </dd>
        </dl>
    

    <form method="post">
        @if (String.IsNullOrEmpty(Model.ErrorMessage) && Model.Publisher != null)
        {
            <input type="hidden" asp-for="Publisher.PublisherId"/>
            <input type="submit" value="Delete" class="btn btn-danger"/>
            <span>|</span>
        }

        <a asp-page="./Index">Back to List</a>
    </form>
</div>